@model Finaliglesia.Models.MiembroMatricula

@{
    ViewBag.Title = "Crear";
}

<h2>Crear</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>MiembroCeremonia</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("matricula", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.MatriculasId, ViewData["matricula"] as SelectList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MatriculasId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MatriculasId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MatriculasId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MatriculasId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div class="form-group">
    <div class="col-md-10">
        <input type="submit" value="Guardar" id="enviar" class="btn btn-primary form-control centrarbt" />
    </div>
</div>
<div>
    @Html.ActionLink("Regresar", "Index", "Ceremonias")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="@Url.Content("~/Scripts/Listar.js")"></script>
    <script src="@Url.Content("~/Scripts/FuncionMatricula.js")"></script>

    <script>
    $(".datepicker").datepicker({
        format: 'yyyy/mm/dd',
        autoclose: true,
        lannguaje:'es'
    });
    </script>
    <script>
        $('#agregar').click(agregarmiembros_click);
        $('#enviar').click(crear_Click);
    </script>
}
