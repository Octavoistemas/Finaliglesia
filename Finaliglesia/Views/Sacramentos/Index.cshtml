@model IEnumerable<Finaliglesia.Models.Sacramento>

@{
    ViewBag.Title = "Index";
}

<h2>Inicio</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create",null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DetalleSacramento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DetalleSacramento)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.SacramentoID }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.SacramentoID }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.SacramentoID }, new { @class = "btn btn-primary" })
        </td>
    </tr>
}

</table>
