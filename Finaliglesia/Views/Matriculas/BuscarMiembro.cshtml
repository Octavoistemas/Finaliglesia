@model Finaliglesia.Models.BuscarMiembro

@{
    ViewBag.Title = "Buscar";
}

<h2>Buscar</h2>

<div class="row">
    <div class="col-lg-4">
        <div class="panel-heading">
            <h5>Buscar Estuduantes</h5>
        </div>
        <div class="panel-body">
            <div class="container">
                    @using (Ajax.BeginForm("BuscaMiembro", "Matriculas", null,
            new AjaxOptions
            {
                HttpMethod = "POST",
                UpdateTargetId = "cargadeajax",
                LoadingElementId = "cargar",
                InsertionMode = InsertionMode.Replace
            }, new { @class = "control-label", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="form-group">
                                @Html.Label("Iglesia", new { @class = "control-label" })
                                <br />
                                <div class="col-md-10">
                                    
                                    @Html.DropDownListFor(t => t.idiglesia, ViewData["igle"] as SelectList, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(t => t.idperiodo, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Periodo", new { @class = "control-label" })
                                <div class="col-md-10">
                                   @Html.DropDownListFor(t=>t.idperiodo, ViewData["periodoss"] as SelectList, new { @class = "form-control" })
                                @Html.ValidationMessageFor(t => t.idperiodo, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Sacramento", new { @class = "control-label" })
                                <div class="col-md-10">
                                    @Html.DropDownListFor(t => t.idsacramento, ViewData["sacra"] as SelectList, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(t => t.idsacramento, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">

                                <div class="col-md-10">
                                    <input type="submit" class="btn btn-default" value="Buscar" />
                                </div>
                            </div>
                        </div>
                    }
                </div>

        </div>
    </div>
</div>

<div class="container">
    <img id="cargar" src="~/Images/cargar.gif"
         width="30" height="30" style="display:none" />
</div>

<div id="cargadeajax"></div>


