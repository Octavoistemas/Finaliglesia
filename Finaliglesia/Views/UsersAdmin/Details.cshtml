@model Finaliglesia.Models.ApplicationUser

@{
    ViewBag.Title = "Usuarios";
}

<h2>Detalle</h2>

<div>
    <h4>Usuarios</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NombreCompleto)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NombreCompleto)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

    </dl>
</div>
<h4>Lista de roles para este usuario</h4>
@if (ViewBag.RoleNames.Count == 0)
{
    <hr />
    <p>No se encontraron roles para este usuario.</p>
}

<table class="table">

    @foreach (var item in ViewBag.RoleNames)
    {
        <tr>
            <td>
                @item
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Regresar", "Index",null, new { @class = "btn btn-primary" })
</p>



