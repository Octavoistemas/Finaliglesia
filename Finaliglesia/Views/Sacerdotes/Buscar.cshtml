@model Finaliglesia.Models.BuscarSacerdote

@{
    ViewBag.Title = "Buscar";
}

<h2>Buscar</h2>

<div class="row">
    <div class="col-lg-4">
        <div class="panel-heading">
            <h5>Buscar por Cedula</h5>
        </div>
        <div class="panel-body">
            <div class="container">
                @using (Ajax.BeginForm("BuscaCedula", "Sacerdotes", null,
        new AjaxOptions
        {
            HttpMethod = "POST",
            UpdateTargetId = "cargadeajax",
            LoadingElementId = "cargar",
            InsertionMode = InsertionMode.Replace
        }, new { @class = "control-label", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.Label("Cedula", new { @class = "control-label" })
                        @Html.TextBoxFor(t => t.BuscarCedula, new { @style = "width:400px", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Cedula", new { @class = "control-label" })
                        @Html.EditorFor(t => t.Fecha, new { htmlAttributes = new { @class = "form-control datepicker" } })
                        @Html.ValidationMessageFor(t => t.Fecha, "", new { @class = "text-danger" })
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" class="btn btn-default" value="Buscar" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="container">
    <img id="cargar" src="~/Images/cargar.gif"
         width="30" height="30" style="display:none" />
</div>
<br />
<br />
<div id="cargadeajax"></div>
@section Scripts{
    @Scripts.Render("/bundles/jqueryval")
    <script>
    $(".datepicker").datepicker({
        format: 'yyyy-mm-dd',
        autoclose: true,
        lannguaje:'es'
    });
    </script>
    }
