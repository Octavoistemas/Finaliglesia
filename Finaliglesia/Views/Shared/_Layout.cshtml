<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("IGLESIA", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>

                    @if (User.IsInRole("Admin") || User.IsInRole("Secretaria"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="true">
                                Ceremonias <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Nuevo", "Index", "Ceremonias")</li>
                                <li>@Html.ActionLink("Facturas", "Index", "Facturas")</li>
                                <li>@Html.ActionLink("Horarios", "Index", "Horarios")</li>
                                <li>@Html.ActionLink("Sacramentos", "Index", "Sacramentos")</li>
                            </ul>
                        </li>
                           
                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("Tesorero"))
                    {
                        <li>@Html.ActionLink("Sacerdotes", "Index", "Sacerdotes")</li>
                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("Tesorero"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="true">
                                Miembros 
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Catequistas", "Index", "Catequistas")</li>
                                <li>@Html.ActionLink("Personas", "Index", "Miembros")</li>
                            </ul>
                        </li>

                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("Tesorero"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="true">
                                Iglesias 
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    @Html.ActionLink("Nuevo", "Index", "Iglesias")

                                </li>
                                <li>
                                    @Html.ActionLink("Directivas", "Index", "Directivas")
                                    
                                </li>
                                <li>@Html.ActionLink("Cargos", "Index", "Cargos")</li>
                            </ul>
                        </li>
                            
                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("Tesorero"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="true">
                                Matriculas
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    @Html.ActionLink("Nuevo", "Create", "Matriculas")
                                </li>
                            </ul>
                        </li>

                    }
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Autores: Jaime Chiliquinga, Joher Lopez</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
